{
  "compilerOptions": {
    "target": "DOM",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "DOM"
    ],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "types": [
      "vite/client"
    ],
    "isolatedModules": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  }
}
