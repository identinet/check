// Documentation: https://docs.deno.com/runtime/manual/getting_started/configuration_file
{
  // workaround to make ./tsconfig.json's paths work in deno
  "imports": {
    "~/": "./src/"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "always",
    "include": [
      "src/"
    ]
  }
}
